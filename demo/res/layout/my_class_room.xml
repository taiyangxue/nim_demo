<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bussiness_card_gridview_bg"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_channel_creat"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/nim_message_button_bottom_send_selector"
        android:textColor="@color/color_green_text_view_selector"
        android:text="创建教室"/>
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的房间"
            android:background="@color/contact_letter_idx_bg"
            android:textColor="@color/color_blue_3a9efb"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:text="推流地址:" />

            <EditText
                android:id="@+id/et_push_id"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp" />
        </LinearLayout>
        <GridView
            android:padding="10dp"
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="90dp"
            android:horizontalSpacing="1dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />
    </LinearLayout>
</RelativeLayout>