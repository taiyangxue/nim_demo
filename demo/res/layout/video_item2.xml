<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="horizontal">


    <com.netease.nim.uikit.common.ui.imageview.ImageViewEx
        android:id="@+id/cover_image_video"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fengmian"
        android:visibility="gone"
        android:scaleType="centerCrop" />
    <com.netease.nim.uikit.common.ui.imageview.ImageViewEx
        android:id="@+id/cover_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/directory3"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ali_play" />


            <ImageView
                android:id="@+id/iv_open"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ali_daan" />

            <ImageView
                android:id="@+id/iv_shoucang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@id/iv_open"
                android:padding="5dp"
                android:src="@drawable/ali_shoucang" />
            <ImageView
                android:id="@+id/iv_hudong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/iv_shoucang"
                android:padding="3dp"
                android:src="@drawable/hudong" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_videotype"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_creat_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-06-05 18:32:16"
                android:singleLine="true"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>