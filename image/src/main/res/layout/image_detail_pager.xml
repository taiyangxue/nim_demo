<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.loveplusplus.demo.image.HackyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <TextView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/viewpager_indicator"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2fb15f">


        <ImageView
            android:id="@+id/iv_caogao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:padding="13dp"
            android:src="@drawable/yidu_caogao" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/iv_daan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/ali_daan_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_shipin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/iv_daan"
            android:padding="10dp"
            android:src="@drawable/ali_play_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_yidu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/iv_shipin"
            android:padding="5dp"
            android:src="@drawable/icon_cuo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/iv_yidu"
            android:padding="10dp"
            android:src="@drawable/ali_shoucang_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_hudong"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/iv_collect"
            android:padding="10dp"
            android:src="@drawable/hudong_white"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>